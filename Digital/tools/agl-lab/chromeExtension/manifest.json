{
    "manifest_version": 3,
    "name": "AGL Lab My Account Assistant",
    "description": "Extension to assist testing of AGL My Account.",
    "version": "3",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "128": "icon.png",
        "16": "icon.png"
     },
    "permissions": [
        "*://*/*",
        "activeTab",
        "storage",
        "tabs",
        "notifications",
        "http://*/",
        "https://*/"
    ]
}